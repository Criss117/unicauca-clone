---
import Header from "@components/sections/Header.astro";
import Footer from "@components/sections/Footer.astro";

interface Props {
  title?: string;
}

const { title = "Unicauca Clone - Home" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <link rel="icon" type="image/png" href="/UniV.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main class="pt-28">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    position: relative;
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
